{
	"name": "vercel-project-manager-vscode",
	"displayName": "Vercel Project Manager",
	"description": "Manage Vercel Projects from VSCode",
	"version": "0.0.1",
	"license": "MIT",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vercel.dev",
		"onCommand:vercel.logIn",
		"onWebView:vercel.logView",
		"onView:vercel-deployments"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"title": "Vercel Project Manager",
			"properties": {
				"vercel.AccessToken": {
					"type": "string",
					"default": "",
					"description": "Your Vercel Access Token(found at https://vercel.com/account/tokens)."
				}
			}
		},
		"commands": [
			{
				"command": "vercel.dev",
				"category": "Vercel Project Manager",
				"title": "vercel dev"
			},
			{
				"command": "vercel.logIn",
				"category": "Vercel Project Manager",
				"title": "Log in"
			},
			{
				"command": "vercel.logOut",
				"category": "Vercel Project Manager",
				"title": "Log Out"
			},
			{
				"command": "vercel.openLogPanel",
				"category": "Vercel Project Manager",
				"title": "Open Logs"
			},
			{
				"command": "vercel.refreshLogPanel",
				"category": "Vercel Project Manager",
				"title": "Refresh Active Log Panel",
				"icon": "$(extensions-refresh)"
			},
			{
				"command": "vercel.openURL",
				"category": "Vercel Project Manager",
				"title": "Open URL in Browser",
				"icon": "$(globe)"
			},
			{
				"command": "vercel.copyURL",
				"category": "Vercel Project Manager",
				"title": "Copy URL to Clipboard",
				"icon": {
					"dark": "resources/icons/dark/copy-to-clipboard.svg",
					"light": "resources/icons/light/copy-to-clipboard.svg"
				}
			},
			{
				"command": "vercel.refreshDeployments",
				"category": "Vercel Project Manager",
				"title": "Refresh Deployments",
				"icon": "$(extensions-refresh)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vercel-sidebar",
					"title": "VSCode Vercel",
					"icon": "resources/icons/dark/vercel.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "vercel-deployments",
				"contents": "You have not yet logged in to view deployments.\n[â–² Log In with Vercel](command:vercel.logIn)",
				"when": "!vercelLoggedIn"
			}
		],
		"views": {
			"vercel-sidebar": [
				{
					"type": "tree",
					"id": "vercel-deployments",
					"name": "Deployments",
					"visibility": "visible"
				},
				{
					"type": "tree",
					"id": "vercel-projects",
					"name": "Projects",
					"visibility": "collapsed"
				}
			]
		},
		"menus": {
			"commandPalette": [
				{
					"command": "vercel.refreshDeployments",
					"when": "false"
				},
				{
					"command": "vercel.openLogPanel",
					"when": "false"
				},
				{
					"command": "vercel.refreshLogPanel",
					"when": "false"
				},
				{
					"command": "vercel.openURL",
					"when": "false"
				},
				{
					"command": "vercel.copyURL",
					"when": "false"
				}
			],
			"view/title": [
				{
					"command": "vercel.refreshDeployments",
					"when": "view == vercel-deployments",
					"group": "navigation"
				}
			],
			"editor/title": [
				{
					"command": "vercel.refreshLogPanel",
					"when": "vercelLogViewFocus",
					"group": "navigation@1"
				}
			],
			"view/item/context": [
				{
					"command": "vercel.openURL",
					"when": "view == vercel-deployments && viewItem == deploymentLog",
					"group": "inline@1"
				},
				{
					"command": "vercel.copyURL",
					"when": "view == vercel-deployments && viewItem == deployment || viewItem == deploymentLog",
					"group": "inline@2"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^8.0.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.74.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"@vscode/test-electron": "^2.2.0",
		"eslint": "^8.28.0",
		"glob": "^8.0.3",
		"mocha": "^10.1.0",
		"ts-loader": "^9.4.1",
		"typescript": "^4.9.3",
		"webpack": "^5.75.0",
		"webpack-cli": "^5.0.0"
	},
	"dependencies": {
		"axios": "^1.2.1",
		"node-fetch": "^3.3.0",
		"timeago.js": "^4.0.2",
		"urlcat": "^3.0.0"
	}
}
