{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "./dist",
    "verbatimModuleSyntax": false,
    // don't need bc no importing allowed
    "declaration": false,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true
  },
  "include": ["src", "resources"],
  "exclude": ["dist"]
}
